<!DOCTYPE html>
<html>
<head>
  <title>Event Registrations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-4">

  <div class="container">
    <h2 class="mb-4">Event Registrations</h2>

    <% if (registrations.length === 0) { %>
      <div class="alert alert-info">No students have registered yet.</div>
    <% } else { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Student Username</th>
            <th>Event Title</th>
            <th>Registration Date</th>
          </tr>
        </thead>
        <tbody>
          <% registrations.forEach((reg, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= reg.student.username %></td>
              <td><%= reg.event.title %></td>
              <td><%= new Date(reg.registrationDate).toLocaleString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
 <a href="/logout" class="btn btn-secondary mt-4">Logout</a>
</body>
</html>
